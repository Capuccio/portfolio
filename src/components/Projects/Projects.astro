---
import './Projects.css';
import ReactJS from '../icons/ReactJS.astro';
import NextJS from '../icons/NextJS.astro';
import Expo from '../icons/Expo.astro';
import Tailwind from '../icons/Tailwind.astro';
import StyledComponents from '../icons/Styledcomponents.astro';
import Express from '../icons/Express.astro';
import NestJS from '../icons/NestJS.astro';
import PostgreSQL from '../icons/PostgreSQL.astro';
import Github from '../icons/Github.astro';
import Url from '../icons/Url.astro';

const TAGS = {
	REACT: {
		name: "React",
		class: "bg-react text-white",
		icon: ReactJS
	},
	EXPRESS: {
		name: "Express",
		class: "bg-express text-white",
		icon: Express
	},
	NEXTJS: {
		name: "Next.js",
		class: "bg-nextjs text-white",
		icon: NextJS
	},
	EXPO: {
		name: "Expo",
		class: "bg-white",
		icon: Expo
	},
	TAILWIND: {
		name: "Tailwind",
		class: "bg-tailwind text-white",
		icon: Tailwind
	},
	STYLEDCOMPONENTS: {
		name: "Styled Components",
		class: "bg-styledcomponents text-white",
		icon: StyledComponents
	},
	NESTJS: {
		name: "NestJS",
		class: "bg-nestjs text-white",
		icon: NestJS
	},
	POSTGRESQL: {
		name: "Postgres",
		class: "bg-postgresql text-white",
		icon: PostgreSQL
	}
}

const PROJECTS = [
	{
		title: "La Gran Rifa",
		image: "/larifa.webp",
		description:
			"Plataforma web que facilita la venta de boletos y la gestión desde un panel administrativo. Utiliza PWA para ofrecer una experiencia de app nativa.",
		tags: [TAGS.REACT, TAGS.EXPRESS, TAGS.POSTGRESQL]
	},
	{
		title: "Sport Pro",
		image: "/tournaments.webp",
		description:
			"Aplicación móvil híbrida para la gestión de torneos deportivos",
		tags: [TAGS.NEXTJS, TAGS.EXPO, TAGS.NESTJS, TAGS.POSTGRESQL]
	},
	{
		title: "Weather App",
		image: "/weather.webp",
		description:
			"Plataforma web hecha como Hobbie de práctica que te permite ver el clima en tu sector.",
		tags: [TAGS.REACT, TAGS.TAILWIND],
		github: "https://github.com/Capuccio/weather-application",
		link: "https://weather-react-lilac.vercel.app"
	},
	{
		title: "Tarjeta Crédito",
		image: "/card_form.webp",
		description:
			"Página web hecha por Hobbie para simular un formulario de pago con una tarjeta de crédito o débito.",
		tags: [TAGS.NEXTJS, TAGS.STYLEDCOMPONENTS],
		github: "https://github.com/Capuccio/interactive-card",
		link: "https://interactive-card-sand.vercel.app"
	}
]
---

<div class="projects">
	{PROJECTS.map((project) => (
		<div class="project-wrapper">
			<article class="project">
				<div class="image-container">
					<div class="portrait-holder">
						<img class="portrait" src={project.image} />
					</div>
				</div>
				<div class="project-info">
					<h4 class="project-info__title">{project.title}</h4>
					<p class="project-info__description">{project.description}</p>
				</div>
				<ul class="projects__tags remove-style-ol-ul">
					{project.tags.map((tag) => (
						<li>
							<span class={`tag ${tag.class}`}>
								<tag.icon class="logo-icon" />
								{tag.name}
							</span>
						</li>
					))}
				</ul>
			</article>
			{(project.link || project.github) ? (
				<footer class="project-footer">
					{project.github && (
						<a href={project.github} target="_blank" class="project-pill"><Github /> Código</a>
					)}
					{project.link && (
						<a href={project.link} target="_blank" class="project-pill"><Url /> Web</a>
					)}
				</footer>
			) : null}
		</div>
	))}
</div>