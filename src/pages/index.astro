---
import '../styles/index.css';

import Layout from '../layouts/Layout.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeDots from '../components/icons/CodeDots.astro';
import User from '../components/icons/User.astro';
import Header from '../components/Header/Header.astro';
import Headline from '../components/Headline/Headline.astro';
import SectionContainer from '../components/Section/SectionContainer/SectionContainer.astro';
import SectionTitle from '../components/Section/SectionTitle/SectionTitle.astro';
import Experiences from '../components/Experiences/Experiences.astro';
import Projects from '../components/Projects/Projects.astro';
import About from '../components/About/About.astro';

import translation from '../locales/es.json';
---
<Layout title="Jose Cordova | Portafolio" description="¡Ey! Contáctame y digitalicemos tus ideas en el internet. Especializado en apps web, móviles y escritorio. Sigamos avanzando hacia la digitalización">
	<main>
		<Header header={translation.header} lang="ES" />
		<Headline headline={translation.headline} />

		<div class="sections-wrapper">
			<SectionContainer id={translation.header[0].label}>
				<SectionTitle>
					<Briefcase class="section-icon" />
					Experiencia
				</SectionTitle>
				<Experiences experiences={translation.experiences} />
			</SectionContainer>

			<SectionContainer id={translation.header[1].label}>
				<SectionTitle>
					<CodeDots class="section-icon" />
					Proyectos
				</SectionTitle>
				<Projects projects={translation.projects} />
			</SectionContainer>

			<SectionContainer id={translation.header[2].label}>
				<SectionTitle>
					<User class="section-icon" />
					Sobre mí
				</SectionTitle>
				<About about={translation.about} />
			</SectionContainer>
		</div>
	</main>
</Layout>