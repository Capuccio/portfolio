---
import Layout from "../layouts/Layout.astro";
import Home from '../components/icons/Home.astro';
---

<Layout title="404">
	<section class="container">
		<div class="missing">
		<h1 class="title">
			404
		</h1>
		<div class="avatar__img">
			<img src="/avatar_404.webp" alt="404" />
		</div>
		<a href="/" class="general-pill">
			<Home width="34" height="34"/>
		</a>
		</div>
	</section>
</Layout>

<style>
	.container {
		display: grid;
		justify-items: center;
		height: 100vh;
	}

	.missing {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.title {
		font-size: 8rem;
		color: transparent;
		background-image: linear-gradient(to right, #174417, #2A9A57);
		background-clip: text;
	}
	
	.avatar__img {
		width: 22rem;
		height: 22rem;
	}

	.avatar__img > img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	a {
		display: flex;
		padding: 0.25rem 3rem;
		border-radius: 99px;
		background-color: var(--general-pill-bg);
		border: 1px solid rgba(128, 128, 128, 0.5);
		transition: all 0.15s ease;
	}

	a:hover {
		color: var(--text-color-hover);
		background-color: var(--general-pill-bg-hover);
	}
</style>

<script is:inline>
	const matchMedia404 = window.matchMedia("(prefers-color-scheme: dark)");
	const theme404 = localStorage.getItem("theme") ?? (matchMedia404.matches ? "dark" : "light");
	document.documentElement.classList.toggle("dark", theme404 === "dark" || (theme404 === "system" && matchMedia404.matches));
</script>